<script>
  const passwordField = document.getElementById("password");
  const togglePassword = document.querySelector(".password-toggle-icon i");

  togglePassword.addEventListener("click", function () {
    if (passwordField.type === "password") {
      passwordField.type = "text";
     togglePassword.classList.remove("fa-eye-slash");
      togglePassword.classList.add("fa-eye");
    } else {
      passwordField.type = "password";
      togglePassword.classList.remove("fa-eye");
      togglePassword.classList.add("fa-eye-slash");
    }
  });

  const passwordFieldCheck = document.getElementById("password-check");
  const togglePasswordCheck = document.querySelector(".password-check-toggle-icon i");

  togglePasswordCheck.addEventListener("click", function () {
    if (passwordFieldCheck.type === "password") {
      passwordFieldCheck.type = "text";
     togglePasswordCheck.classList.remove("fa-eye-slash");
      togglePasswordCheck.classList.add("fa-eye");
    } else {
      passwordFieldCheck.type = "password";
      togglePasswordCheck.classList.remove("fa-eye");
      togglePasswordCheck.classList.add("fa-eye-slash");
    }
  });

  function checkPassword(password, reEnterPassword) {
    var passwordInput =  document.getElementById(password);
    var reEnterPasswordInput = document.getElementById(reEnterPassword)
    if((passwordInput.value !== "" || reEnterPasswordInput.value !== "") 
    && (passwordInput.value.length <= 6 || reEnterPasswordInput.value.length <= 6)) {
      document.getElementById('error-noti').style.display = "block";
      document.getElementById('error-noti').innerText = "Password must contain at least 6 characters."
      document.getElementById('submit-btn').disabled = true;
      document.getElementById('submit-btn').style = "opacity: 0.7";
    }
    else if(passwordInput.value !== reEnterPasswordInput.value 
    && (passwordInput.value !== "" || reEnterPasswordInput.value !== "")) {
      document.getElementById('error-noti').style.display = "block";
      document.getElementById('error-noti').innerText = "Passwords are not matched."
      document.getElementById('submit-btn').disabled = true;
      document.getElementById('submit-btn').style = "opacity: 0.7";
    }else {
      document.getElementById('error-noti').style.display = "none";
      document.getElementById('submit-btn').disabled = false;
      document.getElementById('submit-btn').style = "opacity: 1";
    }
  }
</script>